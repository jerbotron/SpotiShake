<resources>

    <!-- Base application themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/spotifyBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/spotifyGreen</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="android:textColorPrimary">@color/offWhite</item>
        <item name="android:textColorSecondary">@color/spotifyLightGray</item>
        <item name="android:colorBackground">@color/spotifyBlack</item>
    </style>

    <!--Tool bar themes-->
    <style name="MyToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

</resources>
